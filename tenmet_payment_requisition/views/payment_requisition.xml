<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

<!--        Payment Requisition Form View-->
        <record model="ir.ui.view" id="payment_requisition_form_view">
            <field name="name">payment_requisition_form_view</field>
            <field name="model">payment.requisition</field>
            <field name="arch" type="xml">
                <form string="Payment Requisition">
                    <header>

                        <button name="action_draft" type="object"
                                string="Reset to Draft"
                                states="rejected"/>
                        <button name="action_submitted" type="object"
                                string="Submit"
                                class="oe_highlight"
                                states="draft"/>
                        <button name="action_authorized" type="object"
                                string="Authorize"
                                class="oe_highlight"
                                groups="tenmet_payment_requisition.group_approver"
                                states="submitted"/>
                        <button name="action_certified" type="object"
                                string="Certify"
                                class="oe_highlight"
                                groups="tenmet_payment_requisition.group_approver"
                                states="authorized"/>
                        <button name="action_approved" type="object"
                                string="Approve"
                                class="oe_highlight"
                                groups="tenmet_payment_requisition.group_approver"
                                states="certified"/>
                        <button name="action_reject1" type="object"
                                string="Reject"
                                groups="tenmet_payment_requisition.group_approver"
                                states="submitted"/>
                        <button name="action_reject2" type="object"
                                string="Reject"
                                groups="tenmet_payment_requisition.group_approver"
                                states="authorized"/>
                        <button name="action_reject3" type="object"
                                string="Reject"
                                groups="tenmet_payment_requisition.group_approver"
                                states="certified"/>
                        <button name="create_bill" type="object"
                                class="oe_highlight" 
                                string="Create Bill" states="approved" groups="tenmet_payment_requisition.group_administrator"/>
                        <button name="create_journal" type="object"
                                class="oe_highlight"
                                string="Create Entry for Other A/c Payable" states="approved" groups="tenmet_payment_requisition.group_administrator"/>
                        
                        <button name="action_cancel"
                                type="object"
                                string="Cancel"
                                states="approved"
                                groups="tenmet_payment_requisition.group_administrator"/>   
                        <button name="reset_to_approved" type="object"
                                string="Reset to Approved" states="posted" groups="tenmet_payment_requisition.group_administrator"/>

                        <field name="state" widget="statusbar"/>

                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button type="object" name="action_view_bill" class="oe_stat_button" icon="fa-money"
                                    attrs="{'invisible':[('state', 'not in', ['posted'])]}" groups="tenmet_payment_requisition.group_accountant">
                                 <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Related Bill</span>
                                </div>
                            </button>
                        </div>
<!--                        <widget name="web_ribbon" title="Approved" attrs="{'invisible': [('state', 'not in', ['approved,posted'])]}"/>-->
                        <div class="oe_title">
                            <label for="name" string="Payment Requisition"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>

                        <group>
                            <group>
                                <field name="requestor" options="{'no_create_edit': True}" attrs="{'readonly':[('state','not in','draft')]}"/>
                                <field name="date" attrs="{'readonly':[('state','not in','draft')]}"/>
                                <field name="purpose" attrs="{'readonly':[('state','not in','draft')]}"/>
                                <field name="created_by_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="project" options="{'no_create': True}" attrs="{'readonly':[('state','not in','draft')]}"/>
                               <!-- <field name="budget_id" options="{'no_create': True}" attrs="{'readonly':[('state','not in','draft')]}" domain="[('state','in',('confirm','validate'))]"/>-->
                                <field name="budget_id" readonly="1"/>  
                                <field name="activity" options="{'no_create': True}" attrs="{'readonly':[('state','not in','draft')]}"/>
                                <field name="budget_balance"/>
                                <field name="bank_account_id" attrs="{'invisible':[('state','not in',['approved','posted'])]}"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="requisition Details">
                                <field name="payment_requisition_lines" attrs="{'readonly':[('state','not in',('draft','authorized','approved'))]}">
                                    <tree string="Requisition Details" editable="bottom">
                                        <field name="name"/>
                                        <field name="account_id" options="{'no_create': True}"/>
                                        <field name="project" invisible="1"/>
                                        <field name="activity" invisible="1"/>
                                        <field name="product_uom_id" options="{'no_create': True}"/>
                                        <field name="quantity"/>
                                        <field name="unit_price"/>
                                        <field name="line_total"/>
                                    </tree>
                                </field>
                                <group class="oe_right">
                                    <group class="oe_subtotal_footer">
                                        <field name="requisition_total" widget="monetary"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Approvals">
                                <group>
                                    <group>
                                        <field name="current_user" invisible="1"/>
                                        <field name="authorizer_id" attrs="{'readonly':[('state','not in','draft')]}"/>
                                        <field name="certifier_id" attrs="{'readonly':[('state','not in','draft')]}"/>
                                        <field name="approver_id" attrs="{'readonly':[('state','not in','draft')]}"/>
                                    </group>
                                    <group>
                                        <field name="is_authorizer" invisible="1"/>
                                        <field name="is_certifier" invisible="1"/>
                                        <field name="is_approver" invisible="1"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!--        Payment Requisition Tree-->
        <record model="ir.ui.view" id="payment_requisition_tree_view">
            <field name="name">payment_requisition_tree_view</field>
            <field name="model">payment.requisition</field>
            <field name="arch" type="xml">
                <tree string="Payment Requisition">
                    <field name="name"/>
                    <field name="requestor"/>
                    <field name="date"/>
                    <field name="requisition_total"/>
                    <field name="state"/>
                    <field name="authorizer_id"/>
                    <field name="certifier_id"/>
                    <field name="approver_id"/>
                </tree>
            </field>
        </record>

        <!--        Payment Requisition Search View-->
        <record model="ir.ui.view" id="payment_requisition_search">
            <field name="name">payment_requisition_search</field>
            <field name="model">payment.requisition</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="name"/>
                    <field name="created_by_id"/>
                    <field name="requestor"/>
                    <field name="purpose"/>
                    <field name="project"/>
                    <field name="activity"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Requested By" name="requestedby" domain="" context="{'group_by':'requestor'}"/>
                        <filter string="Project" name="project" domain="" context="{'group_by':'project'}"/>
                        <filter string="TENMET Activities" name="activities" domain="" context="{'group_by':'activity'}"/>
                        <filter string="Authorized By" name="authorizer" domain="" context="{'group_by':'authorized_by'}"/>
                        <filter string="Certified By" name="certifier" domain="" context="{'group_by':'certified_by'}"/>
                        <filter string="Approved By" name="approver" domain="" context="{'group_by':'approved_by'}"/>
                        <filter string="State" name="state" domain="" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>

    <record id="menu_requisition_action" model="ir.actions.act_window">
        <field name="name">Requisitions</field>
        <field name="res_model">payment.requisition</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('created_by_id.user_id', '=', uid)]</field>
    </record>

    <record id="menu_requisition_for_authorizing_action" model="ir.actions.act_window">
        <field name="name">For Authorizing</field>
        <field name="res_model">payment.requisition</field>
        <field name="domain">[('state', '=', 'submitted')]</field>
        <field name="context">{}</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="menu_requisition_for_certifing_action" model="ir.actions.act_window">
        <field name="name">For Certifying</field>
        <field name="res_model">payment.requisition</field>
        <field name="domain">[('state', '=', 'authorized')]</field>
        <field name="context">{}</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="menu_requisition_for_approving_action" model="ir.actions.act_window">
        <field name="name">For Approving</field>
        <field name="res_model">payment.requisition</field>
        <field name="domain">[('state', '=', 'certified')]</field>
        <field name="context">{}</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="menu_requisition_for_posting_action" model="ir.actions.act_window">
        <field name="name">For Posting</field>
        <field name="res_model">payment.requisition</field>
        <field name="domain">[('state', '=', 'approved')]</field>
        <field name="context">{}</field>
        <field name="view_mode">tree,form</field>
    </record>

<!--        For Accounts-->
        <act_window id="menu_requisition_accounts_action"
                    name="Accounts"
                    res_model="payment.requisition"
                    domain="[('state', '=', 'posted')]"
                    view_mode="tree,form"/>

<!--        Root menu-->
        <menuitem id="menu_requisition_root"
                  name="Payment Requisition"
                  sequence="55"
                  web_icon="note,static/description/icon.png"/>

        <menuitem id="menu_requisition"
                  name="Requisition"
                  sequence="1"
                  parent="menu_requisition_root"
                  action="menu_requisition_action"/>

        <menuitem id="menu_requisition_awaiting_approval"
                  name="Awaiting Approval"
                  sequence="2"
                  parent="menu_requisition"
                  groups="tenmet_payment_requisition.group_approver"
                  />

        <menuitem id="menu_requisition_awaiting_authorization"
                  name="For Authorization"
                  sequence="1"
                  parent="menu_requisition_awaiting_approval"
                  action="menu_requisition_for_authorizing_action"
                  />

        <menuitem id="menu_requisition_awaiting_certifying"
                  name="For Certifying"
                  sequence="2"
                  parent="menu_requisition_awaiting_approval"
                  action="menu_requisition_for_certifing_action"
                  />

        <menuitem id="menu_requisition_for_approval"
                  name="For Approving"
                  sequence="3"
                  parent="menu_requisition_awaiting_approval"
                  action="menu_requisition_for_approving_action"
                  />

        <menuitem id="menu_requisition_for_posting"
                  name="For Posting"
                  sequence="3"
                  parent="menu_requisition"
                  groups="tenmet_payment_requisition.group_administrator"
                  action="menu_requisition_for_posting_action"
                  />

        <menuitem id="menu_requisition_accounts"
                  name="Accounts"
                  sequence="4"
                  parent="menu_requisition"
                  groups="tenmet_payment_requisition.group_accountant"
                  action="menu_requisition_accounts_action"
                  />


    </data>
</odoo>
