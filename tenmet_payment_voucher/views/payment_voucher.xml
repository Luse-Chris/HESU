<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="payment_voucher_form_view">
            <field name="name">payment_voucher_form_view</field>
            <field name="model">payment.voucher</field>
            <field name="arch" type="xml">
                <form string="Payment Voucher">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" string="Payment Voucher"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="pr_id"
                                       domain="[('state', '=', ('approved','posted'))]"
                                       options="{'no_create_edit': True, 'no_quick_create': True}"/>
                            </group>
                            <group>
                                <field name="print_date"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="payment_voucher_tree_view">
            <field name="name">payment_voucher_tree_view</field>
            <field name="model">payment.voucher</field>
            <field name="arch" type="xml">
                <tree string="Payment Voucher">
                    <field name="name"/>
                    <field name="print_date"/>
                    <field name="pr_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="menu_payment_voucher_action">
            <field name="name">Payment Voucher</field>
            <field name="res_model">payment.voucher</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_payment_voucher"
                  name="Payment Voucher"
                  sequence=""
                  parent="tenmet_payment_requisition.menu_requisition_root"
                  action="menu_payment_voucher_action"/>

    </data>
</odoo>
